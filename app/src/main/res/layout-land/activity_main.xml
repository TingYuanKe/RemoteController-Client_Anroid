<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="60dp"
    android:background="@color/background"

    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/txt_mousePad"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey1"
        android:text="@string/txt_empty"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/btn_scrolldown"
        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/btn_leftClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_left"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/btn_scrollup"
        android:layout_toStartOf="@+id/btn_scrollup"
        android:width="1dp"
        android:textStyle="bold"
        android:height="2dp"
        android:enabled="true" />

    <Button
        android:id="@+id/btn_rightClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_right"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/txt_mousePad"
        android:layout_alignEnd="@+id/txt_mousePad"
        android:layout_toEndOf="@+id/btn_scrolldown" />

    <Button
        android:id="@+id/btn_scrollup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_scrollup"
        android:clickable="true"
        android:layout_above="@+id/btn_scrolldown"
        android:layout_alignStart="@+id/btn_scrolldown" />

    <Button
        android:id="@+id/btn_scrolldown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_scrolldown"
        android:layout_above="@+id/btn_leftClick"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button_Keyborad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="1dp"
        android:textStyle="bold"
        android:height="2dp"
        android:enabled="true"
        android:text="鍵盤"
        android:layout_marginTop="36dp"
        android:layout_alignTop="@+id/txt_mousePad"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="36dp"
        android:layout_alignStart="@+id/btn_scrollup" />

</RelativeLayout>