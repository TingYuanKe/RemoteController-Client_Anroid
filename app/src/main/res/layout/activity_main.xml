<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="60dp"
    android:background="@color/background"

    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/txt_mousePad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/mousepad"
        android:text="@string/touch_pad"
        android:textColor="@color/grey3"
        android:textSize="20sp"
        android:gravity="center"

        android:layout_above="@+id/btn_LeftClick"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="181dp" />

    <Button
        android:id="@+id/btn_leftClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_left"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/btn_scrollup"
        android:width="1dp"
        android:textStyle="bold"
        android:height="2dp"
        android:enabled="true"
        android:visibility="invisible" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_LeftClick"
        android:text="@string/btn_left"
        android:layout_above="@+id/btn_leftClick"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btn_leftClick"
        android:backgroundTint="@color/buttomclick"/>/>

    <Button
        android:id="@+id/btn_rightClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_right"
        android:textStyle="bold"
        android:layout_below="@+id/txt_mousePad"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/btn_scrollup"
        android:backgroundTint="@color/buttomclick"/>

    <Button
        android:id="@+id/btn_scrollup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_scrollup"
        android:clickable="true"
        android:width="88dp"
        android:height="8dp"
        android:backgroundTint="@color/buttomclick"
        android:layout_alignBaseline="@+id/btn_rightClick"
        android:layout_alignBottom="@+id/btn_rightClick"
        android:layout_centerHorizontal="true" />/>

    <Button
        android:id="@+id/btn_scrolldown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_scrolldown"
        android:backgroundTint="@color/buttomclick"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/btn_scrollup"
        android:layout_toEndOf="@+id/btn_leftClick" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_Keyboard"
        android:src="@drawable/keyboard"
        android:background="#00000000"
        android:width="40dp"
        android:height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_LeftClick"
        android:layout_toStartOf="@+id/btn_scrolldown"
        android:layout_alignParentBottom="true" />
 <TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
     android:layout_alignParentTop="true"
     android:layout_alignParentStart="true"
     android:layout_marginTop="151dp" />

    />
    <ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:scrollbars="none" />

    <TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    </RelativeLayout>
