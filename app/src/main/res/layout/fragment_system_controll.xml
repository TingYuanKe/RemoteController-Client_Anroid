<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="fragment.SystemControll">
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.6"
            android:orientation="vertical"
            android:paddingTop="70dp">

            <TextView
                android:id="@+id/txv_volume"
                android:layout_width="171dp"
                android:layout_height="wrap_content"
                android:text="Volume"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/grey2"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/decrease"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.1"
                    android:text="-"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/grey2"
                    android:textSize="30sp" />

                <SeekBar
                    android:id="@+id/skb_volume"
                    android:layout_width="262dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.66"
                    android:background="@color/backgroundLight"
                    android:indeterminate="false"
                    android:paddingTop="5dp"
                    android:scrollbarSize="10dp" />

                <TextView
                    android:id="@+id/increase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.1"
                    android:text="+"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/grey2"
                    android:textSize="25sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="25dp"
                android:weightSum="1">

                <ImageButton
                    android:id="@+id/imb_decrease"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.35"
                    android:background="@color/background"
                    android:scaleType="fitCenter" />

                <ImageButton
                    android:id="@+id/imb_mute"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="0.3"
                    android:background="@color/background"
                    android:scaleType="fitCenter" />

                <ImageButton
                    android:id="@+id/imb_increase"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.35"
                    android:background="@color/background"
                    android:scaleType="fitCenter" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_gravity="center_vertical"
        android:background="@color/grey2" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:weightSum="1">

        <ImageButton
            android:id="@+id/imb_desktop"
            android:layout_width="110dp"
            android:layout_height="130dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:layout_weight="0.33"
            android:background="@color/background"
            android:foregroundGravity="center_vertical"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/imb_sleep"
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.33"
            android:background="@color/background"
            android:foregroundGravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/imb_shutdown"
            android:layout_width="110dp"
            android:layout_height="130dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.33"
            android:background="@color/background"
            android:foregroundGravity="center_vertical"
            android:scaleType="fitCenter" />
    </LinearLayout>


</LinearLayout>
